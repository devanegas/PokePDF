<Window x:Class="PokePDF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokePDF"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:views="clr-namespace:PokePDF.Views"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:services="clr-namespace:PokePDF.Services"
        mc:Ignorable="d"
        Background="#9C2827"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <services:ImageConverter x:Key="ImageConverter" />
        <BitmapImage x:Key="DefaultImage" UriSource="https://cdn4.iconfinder.com/data/icons/longico/224/longico-23-512.png" />
        <Style TargetType="TextBox">
            <Setter
                Property="Background"
                Value="#751b1b"/>
            <Setter
                Property="Margin"
                Value="20 0 20 0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter
                Property="FontFamily"
                Value="Impact"/>
            <Setter
                Property="Margin"
                Value="20 10 20 10"/>
        </Style>
        <Style TargetType="Button">
            <Setter
                Property="Width"
                Value="250px"/>
            <Setter
                Property="Padding"
                Value="5px"/>
            <Setter
                Property="Margin"
                Value="0 10 0 10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter
                Property="FontFamily"
                Value="Arial"/>
            <Setter
                Property="BorderBrush"
                Value="Blue "/>
            <Setter
                Property="Width"
                Value="500px"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Height="100px"
            Background="#B72F2E"
            Grid.ColumnSpan="1"
            Margin="0px 0px 0px 0px"
            Grid.Row="0"/>
        <Image
            Height="150px"
            Grid.Row="0"
            Source="https://cdn4.iconfinder.com/data/icons/longico/224/longico-23-512.png"/>

        <TextBlock
            Text="Enter Pokemon Name"
            Grid.Row="1"
            FontWeight="Thin"
            FontSize="20px"
            HorizontalAlignment="Center"
            />
        <TextBox
            Grid.Row="2"
            Height="30px"
            FontSize="25px"
            FontFamily="Arial"
            Foreground="White"
            Text="{Binding PokemonName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock
            Height="25px"
            FontSize="18px"
            Grid.Row="3"
            Text="{Binding PokemonNameError}" Visibility="{Binding PokemonNameErrorVisibility}"/>
        <Button
            Grid.Row="4"
            Content="Search Pokemon"
            Command="{Binding SearchPokemon}" IsEnabled="{Binding PokemonIsValid}"/>

        <TextBlock
            Text="Select Pokemon Type:"
            Grid.Row="5"
            FontWeight="Thin"
            FontSize="20px"
            Margin="0 25 0 0"
            HorizontalAlignment="Center"
            />

        <ComboBox ItemsSource="{Binding ListOfPokemonType}"
            SelectedValue="{Binding PokemonTypeProperty}"
            SelectedIndex="0"
            Grid.Row="6"/>

        <TextBlock
            Text="Select Pokemon By Filter:"
            Grid.Row="7"
            FontWeight="Thin"
            FontSize="20px"
            Margin="0 25 0 0"
            HorizontalAlignment="Center"
                />
        <ComboBox ItemsSource="{Binding SortedPokemonNames}"
                SelectedValue="{Binding PokemonName}"
                Grid.Row="8"/>
        <Button
            Content="Sort Pokemon"
            Command="{Binding SortByTypeCommand}"
            Grid.Row="9"/>

        <TextBlock
            Grid.Row="10"
            FontSize="30px"
            Grid.Column="0"
            Text="{Binding Pokemon.Id, StringFormat=Pokemon ID: {0}}"></TextBlock>
        <TextBlock
            Grid.Row="11"
            FontSize="25px"
            Text="{Binding Pokemon.Name, StringFormat=Pokemon Name: {0}}"/>
        <Border CornerRadius="20" Grid.Row="12">
            <TextBlock
                Height="400px"
                Background="#bdc8db"

                Grid.ColumnSpan="1"
                Margin="20px 25px 20px 25px"
                />
        </Border>

        <Image Height="250px"
                Grid.Row="12"
                Grid.Column="0"
                Source="{Binding Pokemon.Sprites.Front_default}">
        </Image>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="13"
                    Margin="20 0 0 20">
            <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Back_default}">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Front_shiny}">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Back_shiny}">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Back_female}">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Front_female}">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Back_shiny_female }">
                </Image>
                <Image Width="100px"
                   Source="{Binding Pokemon.Sprites.Front_shiny_female}">
                </Image>
            </StackPanel>
        <ListView ItemsSource="{Binding Pokemon.PokemonTypes}"
                  Grid.Row="14">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock

                        FontSize="20px"
                        Text="{Binding PokemonType.Name, StringFormat=Type: {0}}" Foreground="White" Background="#B72F2E"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
                Grid.Row="16"
                Content="Print PDF"
                Command="{Binding PrintSelectedPokemonCommand}"/>
    </Grid>
</Window>